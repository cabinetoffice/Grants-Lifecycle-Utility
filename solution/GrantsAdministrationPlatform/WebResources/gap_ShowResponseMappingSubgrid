function toggleSubgridVisibilityOnLoad(executionContext) {
  var formContext = executionContext.getFormContext(); // Get the form context
  // Retrieve the field and subgrid controls
  var automationTypeField = formContext.getAttribute("gap_conditionalautomationenabled"); // Assuming this is the correct field name

  var subgridControl = formContext.getControl("responsemappingsubgrid");
  // Ensure both the field and subgrid control are accessible
  if (automationTypeField && subgridControl) {
    var automationTypeValue = automationTypeField.getValue();
    console.log(automationTypeValue);
    // Determine subgrid visibility based on the field value
    console.log(automationTypeValue && automationTypeValue == 1);
    console.log(subgridControl);
    if (automationTypeValue && automationTypeValue == 1) {
      subgridControl.setVisible(true); // Show the subgrid
    } else {
      subgridControl.setVisible(false); // Hide the subgrid
    }
  }
}
